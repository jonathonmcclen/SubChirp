<h2>Login</h2>

<%= form_tag '/login', mthod: :get do%>
<% if params[:message] != "" %>
    <%=params[:message]%>
<%end%>
    <label>Username or Email:</label>
    <%= text_field_tag :'user[username]'%>
    <br>
    <br>
    <label>Password:</label>
    <%= text_field_tag :'user[password]'%>
    <br>
    <br>
    <input type="submit"  value="login">
    <br>
    
    
<%end%>

<p><%= button_to 'Login With GitHub', '/auth/github', method: :post %> or <a href="/users/new">Create Account<a>.</p>